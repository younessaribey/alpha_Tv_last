        <!-- Mastercard -->
        <div
            class="payment-icon-card mastercard"
            data-payment-icon
            style="animation-delay: 0.4s"
        >
            <svg
                viewBox="0 0 48 48"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
