---
interface Props {
    lang?: "en" | "fr";
}

const { lang = "fr" } = Astro.props;
---

<div class="payment-icons-container">
    <div class="payment-icons-grid">
        <!-- Apple Pay - Most Dominant -->
        <div
            class="payment-icon-card apple-pay"
            data-payment-icon
            style="animation-delay: 0.1s"
        >
            <img src="/logos/apple-pay.png" alt="Apple Pay" />
        </div>

        <!-- Google Pay -->
        <div
            class="payment-icon-card google-pay"
            data-payment-icon
            style="animation-delay: 0.2s"
        >
            <img src="/logos/google-pay.png" alt="Google Pay" />
        </div>

        <!-- Visa -->
        <div
            class="payment-icon-card visa"
            data-payment-icon
            style="animation-delay: 0.3s"
        >
            <img src="/logos/visa.png" alt="Visa" />
        </div>

        <!-- Mastercard -->
        <div
            class="payment-icon-card mastercard"
            data-payment-icon
            style="animation-delay: 0.4s"
        >
            <img src="/logos/mastercard.png" alt="Mastercard" />
        </div>

        <!-- Stripe -->
        <div
            class="payment-icon-card stripe"
            data-payment-icon
            style="animation-delay: 0.5s"
        >
            <img src="/logos/stripe.png" alt="Stripe" />
        </div>
    </div>

    <p class="payment-secure-text">
        <svg
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
        >
            <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
            <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
        </svg>
        {lang === "fr" ? "Paiement 100% sécurisé" : "100% Secure Payment"}
    </p>
</div>

<style>
    .payment-icons-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.25rem;
        margin: 2rem 0;
    }

    .payment-icons-grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        gap: 0.875rem;
        max-width: 600px;
    }

    .payment-icon-card {
        position: relative;
        width: 72px;
        height: 72px;
        padding: 1rem;

        /* Glassmorphism */
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(16px);
        -webkit-backdrop-filter: blur(16px);

        /* Border */
        border: 1px solid rgba(255, 255, 255, 0.12);
        border-radius: 18px;

        /* Glow effect */
        box-shadow:
            0 4px 20px rgba(0, 0, 0, 0.3),
            0 0 0 1px rgba(139, 92, 246, 0.1),
            inset 0 1px 0 rgba(255, 255, 255, 0.1);

        display: flex;
        align-items: center;
        justify-content: center;

        /* Transitions */
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);

        /* Initial state for animation */
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInUp 0.6s ease-out forwards;

        /* Floating animation */
        animation:
            fadeInUp 0.6s ease-out forwards,
            float 3s ease-in-out infinite;
    }

    @keyframes fadeInUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes float {
        0%,
        100% {
            transform: translateY(0px);
        }
        50% {
            transform: translateY(-4px);
        }
    }

    .payment-icon-card img {
        width: 100%;
        height: 100%;
        object-fit: contain;
        filter: brightness(1.1) contrast(1.05);
        transition: all 0.3s ease;
    }

    /* Hover effects */
    .payment-icon-card:hover {
        transform: scale(1.08) translateY(-2px);
        background: rgba(255, 255, 255, 0.08);
        border-color: rgba(255, 255, 255, 0.2);
        cursor: pointer;
    }

    .payment-icon-card:hover img {
        filter: brightness(1.2) contrast(1.1);
        transform: scale(1.05);
    }

    /* Individual card glows */
    .apple-pay {
        box-shadow:
            0 4px 20px rgba(0, 0, 0, 0.3),
            0 0 30px rgba(255, 255, 255, 0.15),
            inset 0 1px 0 rgba(255, 255, 255, 0.15);
    }

    .apple-pay:hover {
        box-shadow:
            0 8px 30px rgba(255, 255, 255, 0.3),
            0 0 40px rgba(255, 255, 255, 0.25),
            inset 0 1px 0 rgba(255, 255, 255, 0.2);
    }

    .google-pay:hover {
        box-shadow:
            0 8px 30px rgba(66, 133, 244, 0.3),
            0 0 40px rgba(66, 133, 244, 0.2),
            inset 0 1px 0 rgba(255, 255, 255, 0.15);
    }

    .visa:hover {
        box-shadow:
            0 8px 30px rgba(26, 115, 232, 0.3),
            0 0 40px rgba(26, 115, 232, 0.2),
            inset 0 1px 0 rgba(255, 255, 255, 0.15);
    }

    .mastercard:hover {
        box-shadow:
            0 8px 30px rgba(235, 0, 27, 0.25),
            0 0 40px rgba(247, 158, 27, 0.2),
            inset 0 1px 0 rgba(255, 255, 255, 0.15);
    }

    .stripe:hover {
        box-shadow:
            0 8px 30px rgba(99, 91, 255, 0.3),
            0 0 40px rgba(99, 91, 255, 0.2),
            inset 0 1px 0 rgba(255, 255, 255, 0.15);
    }

    /* Most dominant - Apple Pay */
    .apple-pay {
        width: 80px;
        height: 80px;
        border-width: 1.5px;
    }

    .payment-secure-text {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
        color: rgba(16, 185, 129, 1);
        font-weight: 500;
        text-align: center;
        margin: 0;

        /* Subtle glow */
        text-shadow: 0 0 20px rgba(16, 185, 129, 0.3);
    }

    .payment-secure-text svg {
        color: rgba(16, 185, 129, 1);
        filter: drop-shadow(0 0 8px rgba(16, 185, 129, 0.4));
    }

    /* Mobile optimization */
    @media (max-width: 640px) {
        .payment-icon-card {
            width: 64px;
            height: 64px;
            padding: 0.875rem;
        }

        .apple-pay {
            width: 72px;
            height: 72px;
        }

        .payment-icons-grid {
            gap: 0.75rem;
        }
    }

    /* Reduced motion */
    @media (prefers-reduced-motion: reduce) {
        .payment-icon-card {
            animation: fadeInUp 0.6s ease-out forwards;
        }
    }
</style>
