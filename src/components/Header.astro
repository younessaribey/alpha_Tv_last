---
import { t, type Lang } from "../lib/data";

interface Props {
    lang?: Lang;
}

const { lang = "fr" } = Astro.props;

const navItems = [
    { href: "/", label: t(lang, "nav.home") },
    { href: "/pricing", label: t(lang, "nav.pricing") },
    { href: "/how-it-works", label: t(lang, "nav.howItWorks") },
    { href: "/faq", label: t(lang, "nav.faq") },
    { href: "/contact", label: t(lang, "nav.contact") },
];

const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50" id="main-header">
    <div class="header-glass">
        <div class="container">
            <nav class="nav-container">
                <!-- Logo with Image -->
                <a href="/" class="logo-link">
                    <img
                        src="/images/alphatv-icon.png"
                        alt="AlphaTV"
                        class="logo-image"
                        width="40"
                        height="40"
                    />
                    <span class="logo-text"
                        >Alpha<span class="logo-accent">Tv</span></span
                    >
                </a>

                <!-- Desktop Nav Pills with Animation -->
                <div class="desktop-nav">
                    <div class="nav-pills" id="nav-pills">
                        <div class="pill-background" id="pill-bg"></div>
                        {
                            navItems.map((item) => (
                                <a
                                    href={item.href}
                                    class={`nav-pill ${currentPath === item.href ? "active" : ""}`}
                                    data-nav-pill
                                >
                                    {item.label}
                                </a>
                            ))
                        }
                    </div>
                </div>

                <!-- Right Side -->
                <div class="nav-right">
                    <!-- Language Toggle -->
                    <button
                        id="lang-toggle"
                        class="lang-toggle"
                        data-lang={lang}
                        aria-label="Toggle language"
                    >
                        <span class="lang-flag"
                            >{lang === "fr" ? "ðŸ‡¬ðŸ‡§" : "ðŸ‡«ðŸ‡·"}</span
                        >
                        {lang === "fr" ? "EN" : "FR"}
                    </button>

                    <!-- CTA Button (Desktop) -->
                    <a href="/pricing" class="btn btn-primary cta-desktop">
                        <span class="cta-icon">âœ¨</span>
                        {t(lang, "hero.cta")}
                    </a>

                    <!-- Mobile Menu Button -->
                    <button
                        id="mobile-menu-btn"
                        class="mobile-menu-btn"
                        aria-label="Toggle menu"
                        aria-expanded="false"
                    >
                        <span class="hamburger-line"></span>
                        <span class="hamburger-line"></span>
                        <span class="hamburger-line"></span>
                    </button>
                </div>
            </nav>
        </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="mobile-menu">
        <div class="container">
            <div class="mobile-menu-content">
                {
                    navItems.map((item) => (
                        <a
                            href={item.href}
                            class={`mobile-nav-link ${currentPath === item.href ? "active" : ""}`}
                        >
                            <span class="mobile-link-icon">â†’</span>
                            {item.label}
                        </a>
                    ))
                }
                <a href="/pricing" class="btn btn-primary btn-cta mt-4">
                    <span class="cta-icon">âœ¨</span>
                    {t(lang, "hero.cta")}
                </a>
            </div>
        </div>
    </div>
</header>

<style>
    /* Header Glass Effect */
    .header-glass {
        background: rgba(3, 0, 20, 0.8);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border-bottom: 1px solid rgba(139, 92, 246, 0.1);
        transition: all 0.3s ease;
    }

    #main-header.scrolled .header-glass {
        background: rgba(3, 0, 20, 0.95);
        border-bottom-color: rgba(139, 92, 246, 0.2);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    }

    .nav-container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        height: var(--header-height);
        gap: 2rem;
    }

    /* Logo */
    .logo-link {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        text-decoration: none;
        transition: transform 0.3s ease;
    }

    .logo-link:hover {
        transform: scale(1.05);
    }

    .logo-image {
        width: 36px;
        height: 36px;
        border-radius: 10px;
        object-fit: cover;
        box-shadow: 0 2px 10px rgba(139, 92, 246, 0.3);
        transition: all 0.3s ease;
    }

    .logo-link:hover .logo-image {
        box-shadow: 0 4px 15px rgba(139, 92, 246, 0.5);
    }

    .logo-text {
        font-size: 1.25rem;
        font-weight: 800;
        color: var(--color-text);
        letter-spacing: -0.02em;
    }

    .logo-accent {
        background: linear-gradient(135deg, #8b5cf6 0%, #6366f1 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    /* Desktop Nav Pills - Animated */
    .desktop-nav {
        flex: 1;
        display: flex;
        justify-content: center;
    }

    .nav-pills {
        position: relative;
        display: flex;
        align-items: center;
        gap: 0.25rem;
        background: rgba(26, 26, 46, 0.6);
        padding: 0.375rem;
        border-radius: 50px;
        border: 1px solid rgba(139, 92, 246, 0.1);
    }

    .pill-background {
        position: absolute;
        background: linear-gradient(
            135deg,
            rgba(139, 92, 246, 0.3) 0%,
            rgba(99, 102, 241, 0.3) 100%
        );
        border-radius: 50px;
        transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
        pointer-events: none;
        z-index: 0;
        box-shadow: 0 4px 15px rgba(139, 92, 246, 0.3);
    }

    .nav-pill {
        position: relative;
        z-index: 1;
        padding: 0.625rem 1.25rem;
        color: var(--color-text-muted);
        text-decoration: none;
        font-size: 0.9375rem;
        font-weight: 600;
        border-radius: 50px;
        transition: all 0.3s ease;
        white-space: nowrap;
    }

    .nav-pill:hover {
        color: var(--color-text);
    }

    .nav-pill.active {
        color: white;
    }

    /* Nav Right */
    .nav-right {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    /* Language Toggle */
    .lang-toggle {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.625rem 1rem;
        background: rgba(26, 26, 46, 0.6);
        border: 1px solid rgba(139, 92, 246, 0.2);
        border-radius: 50px;
        color: var(--color-text);
        font-size: 0.875rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .lang-toggle:hover {
        background: rgba(139, 92, 246, 0.1);
        border-color: rgba(139, 92, 246, 0.3);
        transform: translateY(-1px);
    }

    .lang-flag {
        font-size: 1.125rem;
    }

    /* CTA Button */
    .cta-desktop {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .cta-icon {
        font-size: 1.125rem;
        animation: sparkle 2s ease-in-out infinite;
    }

    @keyframes sparkle {
        0%,
        100% {
            transform: scale(1) rotate(0deg);
        }
        50% {
            transform: scale(1.1) rotate(5deg);
        }
    }

    /* Mobile Menu Button */
    .mobile-menu-btn {
        display: none;
        flex-direction: column;
        gap: 0.375rem;
        background: none;
        border: none;
        padding: 0.5rem;
        cursor: pointer;
    }

    .hamburger-line {
        width: 24px;
        height: 2.5px;
        background: var(--color-text);
        border-radius: 2px;
        transition: all 0.3s ease;
    }

    .mobile-menu-btn[aria-expanded="true"] .hamburger-line:nth-child(1) {
        transform: rotate(45deg) translateY(8px);
    }

    .mobile-menu-btn[aria-expanded="true"] .hamburger-line:nth-child(2) {
        opacity: 0;
    }

    .mobile-menu-btn[aria-expanded="true"] .hamburger-line:nth-child(3) {
        transform: rotate(-45deg) translateY(-8px);
    }

    /* Mobile Menu */
    .mobile-menu {
        position: fixed;
        top: var(--header-height);
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(3, 0, 20, 0.98);
        backdrop-filter: blur(20px);
        transform: translateX(100%);
        transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        overflow-y: auto;
    }

    .mobile-menu.open {
        transform: translateX(0);
    }

    .mobile-menu-content {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding: 2rem 0;
    }

    .mobile-nav-link {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1rem 1.5rem;
        color: var(--color-text-muted);
        text-decoration: none;
        font-size: 1.125rem;
        font-weight: 600;
        border-radius: 12px;
        transition: all 0.3s ease;
        background: rgba(26, 26, 46, 0.3);
        border: 1px solid rgba(139, 92, 246, 0.1);
    }

    .mobile-link-icon {
        font-size: 1.25rem;
        transition: transform 0.3s ease;
    }

    .mobile-nav-link:hover .mobile-link-icon,
    .mobile-nav-link.active .mobile-link-icon {
        transform: translateX(4px);
    }

    .mobile-nav-link:hover {
        background: rgba(139, 92, 246, 0.1);
        border-color: rgba(139, 92, 246, 0.3);
        color: var(--color-text);
    }

    .mobile-nav-link.active {
        background: linear-gradient(
            135deg,
            rgba(139, 92, 246, 0.3) 0%,
            rgba(99, 102, 241, 0.3) 100%
        );
        border-color: rgba(139, 92, 246, 0.4);
        color: white;
    }

    .mt-4 {
        margin-top: 1.5rem;
    }

    /* Responsive */
    @media (max-width: 1024px) {
        .desktop-nav {
            display: none;
        }

        .cta-desktop {
            display: none;
        }

        .mobile-menu-btn {
            display: flex;
        }
    }

    @media (min-width: 1025px) {
        .mobile-menu {
            display: none !important;
        }
    }
</style>

<script>
    // Animated pill nav background
    function initPillNav() {
        const navPills = document.getElementById("nav-pills");
        const pillBg = document.getElementById("pill-bg");
        const activePill = navPills?.querySelector(
            ".nav-pill.active",
        ) as HTMLElement;

        if (!navPills || !pillBg || !activePill) return;

        // Set initial position
        const updatePillBg = (pill: HTMLElement) => {
            const pillRect = pill.getBoundingClientRect();
            const navRect = navPills.getBoundingClientRect();

            pillBg.style.width = `${pillRect.width}px`;
            pillBg.style.height = `${pillRect.height}px`;
            pillBg.style.left = `${pillRect.left - navRect.left}px`;
            pillBg.style.top = `${pillRect.top - navRect.top}px`;
        };

        updatePillBg(activePill);

        // Hover effect
        const pills = navPills.querySelectorAll("[data-nav-pill]");
        pills.forEach((pill) => {
            pill.addEventListener("mouseenter", () => {
                updatePillBg(pill as HTMLElement);
            });
        });

        navPills.addEventListener("mouseleave", () => {
            updatePillBg(activePill);
        });
    }

    // Mobile menu toggle
    function initMobileMenu() {
        const menuBtn = document.getElementById("mobile-menu-btn");
        const mobileMenu = document.getElementById("mobile-menu");
        const mobileLinks = mobileMenu?.querySelectorAll("a");

        menuBtn?.addEventListener("click", () => {
            const isExpanded = menuBtn.getAttribute("aria-expanded") === "true";
            menuBtn.setAttribute("aria-expanded", String(!isExpanded));
            mobileMenu?.classList.toggle("open");
        });

        // Close menu when clicking a link
        mobileLinks?.forEach((link) => {
            link.addEventListener("click", () => {
                menuBtn?.setAttribute("aria-expanded", "false");
                mobileMenu?.classList.remove("open");
            });
        });
    }

    // Scroll detection
    function initScrollDetection() {
        const header = document.getElementById("main-header");
        let lastScroll = 0;

        window.addEventListener("scroll", () => {
            const currentScroll = window.pageYOffset;

            if (currentScroll > 50) {
                header?.classList.add("scrolled");
            } else {
                header?.classList.remove("scrolled");
            }

            lastScroll = currentScroll;
        });
    }

    // Language toggle
    function initLangToggle() {
        const langToggle = document.getElementById("lang-toggle");
        langToggle?.addEventListener("click", () => {
            const currentLang = langToggle.getAttribute("data-lang");
            const newLang = currentLang === "fr" ? "en" : "fr";

            // Get current URL
            const url = new URL(window.location.href);

            // Update or add lang parameter
            url.searchParams.set("lang", newLang);

            // Redirect to same page with new language
            window.location.href = url.toString();
        });
    }

    // Initialize everything
    document.addEventListener("DOMContentLoaded", () => {
        initPillNav();
        initMobileMenu();
        initScrollDetection();
        initLangToggle();
    });
</script>
