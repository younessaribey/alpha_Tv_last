---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import type { Lang } from "../lib/data";

const lang: Lang = (Astro.url.searchParams.get("lang") as Lang) || "fr";
---

<Layout title="Contact" lang={lang}>
    <Header lang={lang} />

    <main class="main-content">
        <section class="section">
            <div class="container">
                <div class="page-header" data-animate>
                    <h1>{lang === "fr" ? "Contactez-nous" : "Contact Us"}</h1>
                    <p class="page-subtitle">
                        {
                            lang === "fr"
                                ? "Nous sommes l√† pour vous aider"
                                : "We're here to help"
                        }
                    </p>
                </div>

                <div class="contact-grid">
                    <!-- Contact Info -->
                    <div class="contact-cards">
                        <div class="contact-card" data-animate>
                            <div class="contact-icon email-icon">üìß</div>
                            <div class="contact-content">
                                <h3>Email</h3>
                                <a href="mailto:support@alphatv.com"
                                    >support@alphatv.com</a
                                >
                            </div>
                        </div>

                        <div class="contact-card" data-animate>
                            <div class="contact-icon whatsapp-icon">üí¨</div>
                            <div class="contact-content">
                                <h3>WhatsApp</h3>
                                <p>
                                    {
                                        lang === "fr"
                                            ? "R√©ponse rapide garantie"
                                            : "Fast response guaranteed"
                                    }
                                </p>
                                <a
                                    href="https://wa.me/33758928901"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="btn btn-whatsapp"
                                >
                                    {
                                        lang === "fr"
                                            ? "Envoyer un message"
                                            : "Send Message"
                                    }
                                </a>
                            </div>
                        </div>

                        <div class="contact-card" data-animate>
                            <div class="contact-icon time-icon">‚è∞</div>
                            <div class="contact-content">
                                <h3>
                                    {
                                        lang === "fr"
                                            ? "Disponibilit√©"
                                            : "Availability"
                                    }
                                </h3>
                                <p>
                                    24/7 ‚Ä¢ {
                                        lang === "fr"
                                            ? "R√©ponse sous 24h"
                                            : "Response within 24h"
                                    }
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Contact Form -->
                    <div class="contact-form-card" data-animate>
                        <h2>
                            {
                                lang === "fr"
                                    ? "Envoyez-nous un message"
                                    : "Send us a message"
                            }
                        </h2>
                        <form class="contact-form">
                            <div class="form-group">
                                <label for="name"
                                    >{lang === "fr" ? "Nom" : "Name"}</label
                                >
                                <input
                                    type="text"
                                    id="name"
                                    name="name"
                                    required
                                />
                            </div>
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input
                                    type="email"
                                    id="email"
                                    name="email"
                                    required
                                />
                            </div>
                            <div class="form-group">
                                <label for="subject"
                                    >{
                                        lang === "fr" ? "Sujet" : "Subject"
                                    }</label
                                >
                                <input
                                    type="text"
                                    id="subject"
                                    name="subject"
                                    required
                                />
                            </div>
                            <div class="form-group">
                                <label for="message">Message</label>
                                <textarea
                                    id="message"
                                    name="message"
                                    rows="4"
                                    required></textarea>
                            </div>
                            <button
                                type="submit"
                                class="btn btn-primary btn-full"
                            >
                                {lang === "fr" ? "Envoyer" : "Send"}
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <Footer lang={lang} />
</Layout>

<style>
    .page-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .page-header h1 {
        font-size: clamp(2rem, 5vw, 3rem);
        font-weight: 700;
        margin-bottom: 0.75rem;
    }

    .page-subtitle {
        color: var(--color-text-muted);
        font-size: 1.125rem;
    }

    /* Contact Grid */
    .contact-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
        max-width: 56rem;
        margin: 0 auto;
    }

    @media (min-width: 1024px) {
        .contact-grid {
            grid-template-columns: 1fr 1fr;
        }
    }

    /* Contact Cards */
    .contact-cards {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .contact-card {
        display: flex;
        gap: 1rem;
        background: var(--color-surface);
        border: 1px solid var(--color-border);
        border-radius: 16px;
        padding: 1.25rem;
    }

    .contact-icon {
        width: 3rem;
        height: 3rem;
        border-radius: 0.75rem;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
        font-size: 1.25rem;
    }

    .email-icon {
        background: rgba(139, 92, 246, 0.2);
    }

    .whatsapp-icon {
        background: rgba(37, 211, 102, 0.2);
    }

    .time-icon {
        background: rgba(236, 72, 153, 0.2);
    }

    .contact-content h3 {
        font-weight: 700;
        margin-bottom: 0.25rem;
    }

    .contact-content a {
        color: var(--color-primary);
    }

    .contact-content a:hover {
        text-decoration: underline;
    }

    .contact-content p {
        color: var(--color-text-muted);
        font-size: 0.875rem;
        margin-bottom: 0.75rem;
    }

    .btn-whatsapp {
        display: inline-flex;
        padding: 0.5rem 1rem;
        background: #25d366;
        color: white;
        font-size: 0.875rem;
        font-weight: 600;
        border-radius: 8px;
    }

    .btn-whatsapp:hover {
        background: #20b85a;
    }

    /* Contact Form */
    .contact-form-card {
        background: var(--color-surface);
        border: 1px solid var(--color-border);
        border-radius: 16px;
        padding: 2rem;
    }

    .contact-form-card h2 {
        font-size: 1.25rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .form-group label {
        display: block;
        font-size: 0.875rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: var(--color-text);
    }

    .form-group input,
    .form-group textarea {
        width: 100%;
        padding: 0.75rem 1rem;
        background: var(--color-background);
        border: 1px solid var(--color-border);
        border-radius: 8px;
        font-size: 0.9375rem;
        color: var(--color-text);
    }

    .form-group input:focus,
    .form-group textarea:focus {
        outline: none;
        border-color: var(--color-primary);
    }

    .form-group textarea {
        resize: vertical;
        min-height: 100px;
    }

    .btn-full {
        width: 100%;
        margin-top: 0.5rem;
    }
</style>
