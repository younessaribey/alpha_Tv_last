                                        <path d="M19 6.8C20.7 8.1 21.8 10.2 21.8 12.5C21.8 14.8 20.7 16.9 19 18.2C17.3 16.9 16.2 14.8 16.2 12.5C16.2 10.2 17.3 8.1 19 6.8Z" fill="#FF5F00"/>
                                    </svg>
                                    <span class="payment-secure">üîí {lang === 'fr' ? 'S√©curis√©' : 'Secure'}</span>
                                </div>

                                {/* Trial Note */}
                                <p class="trial-note">
                                    {lang === 'fr' ? 'Testez 24h avant de payer !' : 'Try 24h before you pay!'}
                                </p>
                            </div>
                        </div>
                    ))}
