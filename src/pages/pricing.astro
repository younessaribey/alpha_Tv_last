                    <div class="channel-logos-container">
                        <div class="channel-logos-track leagues-track">
                            {[...leagueLogos, ...leagueLogos, ...leagueLogos].map((league) => (
                                <div class="channel-logo-wrapper">
                                    <div class="channel-logo-item">
                                        <img src={league.logo} alt={league.name} class="channel-logo-image" loading="lazy" />
                                    </div>
