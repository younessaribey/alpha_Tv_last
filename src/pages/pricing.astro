<style>
    .main-content {
        padding-top: var(--header-height);
    }

    .pricing-page {
        padding-top: 2rem;
        padding-bottom: 3rem;
    }

    @media (min-width: 768px) {
        .pricing-page {
            padding-top: 3rem;
            padding-bottom: 5rem;
        }
    }

    /* Page Header */
    .page-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    /* Free Trial Banner */
    .free-trial-banner {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.25rem;
        background: linear-gradient(135deg, rgba(16, 185, 129, 0.2) 0%, rgba(16, 185, 129, 0.1) 100%);
        border: 1px solid rgba(16, 185, 129, 0.3);
        border-radius: 100px;
        margin-bottom: 1.5rem;
        flex-wrap: wrap;
        justify-content: center;
    }

    .trial-emoji {
        font-size: 1.25rem;
    }

    .trial-main {
        font-size: 1rem;
        font-weight: 700;
        color: #10b981;
    }

    .trial-sub {
        font-size: 0.8125rem;
        color: var(--color-text-muted);
    }

    @media (max-width: 480px) {
        .free-trial-banner {
            flex-direction: column;
            gap: 0.25rem;
        }
    }

    .page-header h1 {
        font-size: clamp(1.75rem, 6vw, 2.75rem);
        font-weight: 700;
        margin-bottom: 0.75rem;
    }

    .page-subtitle {
        font-size: 0.9375rem;
        color: var(--color-text-muted);
        max-width: 520px;
        margin: 0 auto;
        line-height: 1.5;
    }

    @media (min-width: 768px) {
        .page-subtitle {
            font-size: 1.0625rem;
        }
    }

    /* Quick Stats */
    .quick-stats {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
        margin-top: 1.25rem;
        margin-bottom: 1rem;
    }

    .quick-stat {
        display: flex;
        align-items: center;
        gap: 0.375rem;
        padding: 0.5rem 0.875rem;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 100px;
    }

    .quick-stat .stat-emoji {
        font-size: 1rem;
    }

    .quick-stat .stat-text {
        font-size: 0.75rem;
        font-weight: 700;
        color: var(--color-text);
    }

    @media (max-width: 480px) {
        .quick-stats {
            gap: 0.5rem;
        }
        .quick-stat {
            padding: 0.375rem 0.625rem;
        }
        .quick-stat .stat-text {
            font-size: 0.625rem;
        }
    }

    /* Header Trust Badges */
    .header-trust-badges {
        display: flex;
        justify-content: center;
        gap: 0.75rem;
        margin-top: 0.75rem;
        flex-wrap: wrap;
    }

    .trust-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.375rem;
        padding: 0.5rem 0.875rem;
        border-radius: 100px;
        font-size: 0.75rem;
    }

    .trust-badge.stripe {
        background: rgba(99, 102, 241, 0.1);
        border: 1px solid rgba(99, 102, 241, 0.2);
    }

    .trust-badge.stripe span {
        color: var(--color-text);
        font-weight: 600;
    }

    .trust-badge.money-back {
        background: rgba(16, 185, 129, 0.1);
        border: 1px solid rgba(16, 185, 129, 0.2);
    }

    .trust-badge.money-back span {
        color: #10b981;
        font-weight: 600;
    }

    .trust-badge.money-back .guarantee-icon {
        font-size: 1rem;
    }

    @media (max-width: 480px) {
        .header-trust-badges {
            gap: 0.5rem;
        }
        .trust-badge {
            padding: 0.375rem 0.625rem;
            font-size: 0.625rem;
        }
    }

    /* Scrolling Sections */
    .scroll-section {
        margin-bottom: 1.5rem;
        overflow: hidden;
    }

    .scroll-title {
        font-size: 0.9375rem;
        font-weight: 600;
        text-align: center;
        margin-bottom: 0.75rem;
        color: var(--color-text);
    }

    .channel-logos-container {
        position: relative;
        overflow: hidden;
        mask-image: linear-gradient(to right, transparent, black 5%, black 95%, transparent);
